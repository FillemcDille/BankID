@code {

    // Fields
    private List<BankAccount> _accounts = new();
    private BankAccount? _selectedAccount;
    private Guid _selectedAccountId;

    // Sorting
    private SortKey currentKey = SortKey.Date;
    private bool descending = true;

    // Enum to define sorting options
    private enum SortKey
    {
        Date,
        Amount,
        Type,
        Id
    }

    /// <summary>
    /// Handles sorting toggle logic.
    /// </summary>
    /// <param name="sortKey"></param>
    private void SetSort(SortKey sortKey)
    {
        // If the same sort key is clicked again, reverse direction
        if (currentKey == sortKey)
        {
            descending = !descending;
        }
        else
        {
            // Otherwise, change the key and set descending as default
            currentKey = sortKey;
            descending = true;
        }
    }

    // Property: Handles when user selects an account from dropdown
    private Guid SelectedAccountId
    {
        get => _selectedAccountId;
        set
        {
            if (_selectedAccountId == value)
                return;

            _selectedAccountId = value;
            _selectedAccount = _accounts.FirstOrDefault(account => account.Id == value);
            StateHasChanged(); // Update UI when selection changes
        }
    }

    /// <summary>
    /// Lifecycle method
    /// Loads accounts when the page initializes
    /// </summary>
    /// <returns></returns>
    protected override async Task OnInitializedAsync()
    {
        await AccountService.EnsureLoadedAsync();
        _accounts = AccountService.GetAccounts().ToList();

        // If there are accounts, select the first one by default
        if (_accounts.Count > 0)
        {
            _selectedAccountId = Guid.Empty;
            _selectedAccount = null;
        }
    }

    /// <summary>
    /// Returns a sorted list of transactions based on the current sort key and selection.
    /// If "All Accounts" is selected, merges transactions from all accounts.
    /// </summary>
    private IEnumerable<Transaction> sortTransaction()
    {
        
        IEnumerable<Transaction> transactions = SelectedAccountId == Guid.Empty
        ? _accounts.SelectMany(a => a.Transactions)
        : _selectedAccount?.Transactions ?? Enumerable.Empty<Transaction>();
      
        return currentKey switch
        {
            SortKey.Amount => (descending
                ? transactions.OrderByDescending(t => t.Amount)
                : transactions.OrderBy(t => t.Amount)),

            SortKey.Date => (descending
                ? transactions.OrderByDescending(t => t.TimeStamp)
                : transactions.OrderBy(t => t.TimeStamp)),

            SortKey.Type => (descending
             ? transactions.OrderByDescending(t => t.TransactionType)
             : transactions.OrderBy(t => t.TransactionType)),

            SortKey.Id => (descending
              ? transactions.OrderByDescending(t => t.FromAccountId)
              : transactions.OrderBy(t => t.FromAccountId ?? Guid.Empty)),

            _ => transactions
        };
    }
}

