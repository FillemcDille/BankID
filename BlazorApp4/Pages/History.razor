@page "/History"
@inject IAccountService AccountService

<h3 class="text-center mt-4 mb-3">
    <i class="bi bi-clock-history"></i> Transaction History
</h3>
<hr class="w-50 mx-auto" />

<!-- If there are no accounts yet -->
@if (_accounts == null)
{
    <p>No accounts yet!</p>
}
else
{
    <!-- Select which account's history to view -->
   <div class="d-flex justify-content-between align-items-center mb-3 flex-wrap">
     <div class="mb-2">
         <label class=form-label>Select account!</label>
         <InputSelect TValue="Guid"
                      class="form-select"
                      id="accountSelect"
                      @bind-Value="SelectedAccountId">
                      <option value= "@Guid.Empty">All Accounts</option>
             @foreach (var account in _accounts)
             {   
                 <option value="@account.Id">@account.Name - Balance: @($"{account.Balance:N2} SEK") - Interest: @($"{account.InterestRate:P}")</option>
             }
         </InputSelect>
     </div>

    </div>

    <!-- Sorting controls for transactions -->
    <div class="mt-3 mt-md-0">
        <label class="form-label"></label><br />
        <button class="btn btn-outline-secondary btn-sm me-1" @onclick="() => SetSort(SortKey.Date)">
            Sort: Date @(currentKey == SortKey.Date ? (descending ? "↑" : "↓") : "")
        </button>
        <button class="btn btn-outline-secondary btn-sm" @onclick="() => SetSort(SortKey.Amount)">
            Sort: Amount @(currentKey == SortKey.Amount ? (descending ? "↑" : "↓") : "")
        </button>
        <button class="btn btn-outline-secondary btn-sm" @onclick="() => SetSort(SortKey.Type)">
            Sort: Type @(currentKey == SortKey.Type ? (descending ? "↑" : "↓") : "")
        </button>
        <button class="btn btn-outline-secondary btn-sm" @onclick="() => SetSort(SortKey.Id)">
            Sort: Id @(currentKey == SortKey.Id ? (descending ? "↑" : "↓") : "")
        </button>
    </div>

    <!-- Display message if no transactions -->
    @if (!sortTransaction().Any())
    {
        <p>No transactions yet!</p>
    }
    else
    {
        <!-- Transaction table -->
        <table class="table table-sm table-hover table-bordered text-center">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Amount</th>
                    <th>Transaction type</th>
                    <th>Balance after</th>
                    <th>From → To</th>
                    <th>Account</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var transaction in sortTransaction())
                {
                    <tr>
                        <td>@transaction.TimeStamp.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
                        <td>@($"{transaction.Amount:N2} SEK")</td>
                        <td>
                            @if (transaction.TransactionType == TransactionType.Deposit)
                            {
                                <span class="badge bg-success">Deposit</span>
                            }
                            else if (transaction.TransactionType == TransactionType.Withdraw)
                            {
                                <span class="badge bg-danger">Withdrawal</span>
                            }
                            else if (transaction.TransactionType == TransactionType.Interest)
                            {
                                <span class ="badge bg-warning">Interest</span>
                            }
                            else
                            {
                                <span class="badge bg-info">Transfer</span>
                            }
                        </td>

                        <td>@($"{transaction.BalanceAfter:N2} SEK")</td>
                        <td>
                            <!-- Display shortened From → To account IDs -->
                            @if (transaction.FromAccountId.HasValue || transaction.ToAccountId.HasValue)
                            {
                                <span title="From -> To account IDs">
                                    @((transaction.FromAccountId?.ToString() is string from && from.Length >= 6
                                                        ? from.Substring(0, 6) : "None"))
                                    →
                                    @((transaction.ToAccountId?.ToString() is string to && to.Length >= 6
                                                        ? to.Substring(0, 6) : "None"))
                                </span>
                            }
                        </td>
                        <td>
                            @_accounts.FirstOrDefault(a => a.Transactions.Contains(transaction))?.Name
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
}

